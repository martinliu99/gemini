<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="${aop.logger.debugLogback:-false}" scan="true">

    <property name="LOG_FILE_PATH" value="${aop.launcher.launchPath:-${user.home}}/logs" />
    <property name="INCLUDE_LOCATION" value="${aop.logger.includeLocation:-true}" />


    <conversionRule conversionWord="cfile" converterClass="io.gemini.core.logging.logback.pattern.CustomizedFileOfCallerConverter" />
    <conversionRule conversionWord="cline" converterClass="io.gemini.core.logging.logback.pattern.CustomizedLineOfCallerConverter" />
    <conversionRule conversionWord="cclass" converterClass="io.gemini.core.logging.logback.pattern.CustomizedClassOfCallerConverter" />
    <conversionRule conversionWord="cmethod" converterClass="io.gemini.core.logging.logback.pattern.CustomizedMethodOfCallerConverter" />

    <property name="FILE_LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [gemini %X] %cclass.%cmethod\(%cline\) - %msg%n" />
    <property name="CONSOLE_LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%-8.-8thread] %-5level [gemini %X] \(%cfile:%cline\) - %msg%n" />


    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder charset="UTF-8">
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="RollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE_PATH}/gemini.log</file>

        <encoder charset="UTF-8">
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE_PATH}/gemini-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>10</maxHistory>
        </rollingPolicy>
    </appender>


    <logger name="io.gemini" level="info" additivity="false">
        <appender-ref ref="Console"/>
        <appender-ref ref="RollingFile"/>
    </logger>

    <logger name="io.gemini.aop.AopMetrics" level="INFO" additivity="false">
        <appender-ref ref="Console"/>
        <appender-ref ref="RollingFile"/>
    </logger>

    <root level="info">
        <appender-ref ref="Console"/>
        <appender-ref ref="RollingFile"/>
    </root>

</configuration>
